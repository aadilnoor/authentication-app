<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========================================================= -->
    <!-- COMMON PATTERNS -->
    <!-- ========================================================= -->

    <!-- Colored pattern for console -->
    <property name="COLORED_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) [%thread] [%X{requestId}] %cyan(%logger{36}) - %msg%n"/>

    <!-- File pattern without colors -->
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] [%X{requestId}] %logger{36} - %msg%n"/>

    <!-- Main log folder -->
    <property name="LOG_DIR" value="logs"/>


    <!-- ========================================================= -->
    <!-- 1) COLORED CONSOLE LOGGING -->
    <!-- ========================================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COLORED_PATTERN}</pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- 2) APPLICATION LOG (ALL NORMAL LOGS) -->
    <!-- ========================================================= -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_DIR}/application.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily zip -->
            <fileNamePattern>${LOG_DIR}/application.%d{yyyy-MM-dd}.log.zip</fileNamePattern>

            <!-- Keep only 30 days -->
            <maxHistory>30</maxHistory>

            <!-- Optional safety cap -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- 3) ERROR-ONLY LOG FILE -->
    <!-- ========================================================= -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_DIR}/error.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/error.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>

        <!-- Filter ERROR logs only -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <!-- ========================================================= -->
    <!-- 4) AUDIT LOG FILE (Custom Audit Logging) -->
    <!-- ========================================================= -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${LOG_DIR}/audit.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} AUDIT [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- 5) LOGGER FOR AUDIT (Custom Logger) -->
    <!-- ========================================================= -->
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
    </logger>


    <!-- ========================================================= -->
    <!-- 6) ROOT LOGGER -->
    <!-- ========================================================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>
