<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Log Pattern with Colors (Console Only) -->
    <property name="COLORED_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n" />

    <!-- Normal Pattern for File -->
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n" />

    <!-- Log Directory -->
    <property name="LOG_DIR" value="logs"/>

    <!-- ========================================================= -->
    <!-- 1) COLORED CONSOLE APPENDER -->
    <!-- ========================================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${COLORED_PATTERN}</pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- 2) APPLICATION LOG (INFO, WARN, ERROR, DEBUG logs) -->
    <!-- Daily Rotation + ZIP Compression -->
    <!-- ========================================================= -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/application.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
    </appender>


    <!-- ========================================================= -->
    <!-- 3) ERROR LOG (ONLY ERROR level logs) -->
    <!-- ========================================================= -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/error.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/error.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>

        <!-- Filter: Only ERROR logs go here -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <!-- ========================================================= -->
    <!-- ROOT LOGGER (FINAL CONFIG) -->
    <!-- ========================================================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>
